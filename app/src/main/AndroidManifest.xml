<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.colderz.project_bacu_app">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".BacuApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_bacu_app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_bacu_app_round"
        android:supportsRtl="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:theme="@style/Theme.Project_bacu_app">
        <activity
            android:name="com.colderz.project_bacu_app.presentation.ui.SplashScreen"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.colderz.project_bacu_app.presentation.ui.MainActivity"
            android:theme="@style/Theme.Project_bacu_app" />
    </application>

</manifest>