<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/belt"
            android:layout_width="40dp"
            android:layout_height="5dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/gray_belt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/hint_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="40dp"
            android:paddingBottom="30dp"
            android:text="Do czego służy ta sekcja?"
            android:textColor="#2E5A59"
            android:textSize="21sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/hint_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:gravity="center_horizontal"
            android:paddingBottom="15dp"
            android:text="@string/dialog_hint_desc"
            android:textColor="#2E5A59"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@+id/hint_title" />

        <TextView
            android:id="@+id/dialog_ok"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="OK"
            android:textColor="@color/color_orange_main"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginVertical="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/hint_desc"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>